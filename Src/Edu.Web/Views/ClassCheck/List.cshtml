<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>班级名称</th>
                    <th>教师</th>
                    <th>所在校区</th>
                    <th>课程类别</th>
                    <th>开班日期</th>
                    <th>状态</th>
                    <th><span class="glyphicon glyphicon-align-justify"></span></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Teacher</td>
                        <td>@item.SchoolRegionName</td>
                        <td>@item.CourseName</td>
                        <td>@item.StartDate</td>
